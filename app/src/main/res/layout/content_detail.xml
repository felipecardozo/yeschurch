<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailActivity"
    tools:showIn="@layout/activity_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="395dp"
            android:layout_height="659dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:contentDescription="Default icon church"
                app:srcCompat="@drawable/church_cartoon_default" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_church_name"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/label_church_name" />

                <EditText
                    android:id="@+id/text_church_name"
                    android:layout_width="317dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:longClickable="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_church_url"
                    android:layout_width="54dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/label_church_url" />

                <EditText
                    android:id="@+id/text_church_url"
                    android:layout_width="321dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:longClickable="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_assistants"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="icon asisstants"
                    android:textAlignment="viewStart"
                    app:srcCompat="@drawable/asistants_icon" />

                <EditText
                    android:id="@+id/text_church_assistants"
                    android:layout_width="317dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:longClickable="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_church_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_church_schedule" />

                <EditText
                    android:id="@+id/text_church_schedule"
                    android:layout_width="309dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:longClickable="false" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_church_kids"
                    android:layout_width="49dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/label_church_kids" />

                <EditText
                    android:id="@+id/text_church_kids"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:longClickable="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_church_hasParking"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/label_church_hasParking" />

                <EditText
                    android:id="@+id/text_church_hasParking"
                    android:layout_width="233dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:longClickable="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_church_hasParkingOutside"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/label_church_hasParkingOutside" />

                <EditText
                    android:id="@+id/text_church_hasParkingOutside"
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:longClickable="false" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_church_hasAccessibility"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/label_church_hasAccessibility" />

                <EditText
                    android:id="@+id/text_church_hasAccessibility"
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:longClickable="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_church_idioms"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/label_church_idioms" />

                <EditText
                    android:id="@+id/text_church_idioms"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:longClickable="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_church_hasSignLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/label_church_hasSignLanguage" />

                <EditText
                    android:id="@+id/text_church_hasSignLanguage"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:longClickable="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_church_hasBathrooms"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/label_church_hasBathrooms" />

                <EditText
                    android:id="@+id/text_church_hasBathrooms"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:longClickable="false" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>